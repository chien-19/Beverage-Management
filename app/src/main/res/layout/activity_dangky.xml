<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quan_ly_don_hang.DangkyActivity" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ĐĂNG KÝ TÀI KHOẢN"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_ID"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.87"
                    android:text="Tài khoản"
                    android:textSize="15sp"
                    android:width="79dp" />

                <EditText
                    android:id="@+id/txtUsername_User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.87"
                    android:width="200dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_Name"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu"
                    android:textSize="15sp"
                    android:width="79dp" />

                <EditText
                    android:id="@+id/txtPassword_User"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:width="200dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="73dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF0000"
            android:text="Lưu"
            android:textColorLink="#000011"
            android:textStyle="bold"
            android:width="120dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    " />

        <Button
            android:id="@+id/btnGiamgia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF0000"
            android:text="Nhập lại"
            android:textColorLink="#000011"
            android:textStyle="bold"
            android:width="120dp" />
    </LinearLayout>

</RelativeLayout>